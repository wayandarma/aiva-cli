# AIVA CLI Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================

# Gemini API Key - Get from Google AI Studio
# https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Text Generation Model
# Options: gemini-pro, gemini-1.5-flash, gemini-1.5-pro
MODEL_TEXT=gemini-1.5-flash

# Image Generation Model
# Options: gemini-imagine-3
MODEL_IMAGE=gemini-imagine-3

# =============================================================================
# CONTENT GENERATION SETTINGS
# =============================================================================

# Segment duration in seconds
SEGMENT_DURATION=8

# Script length in seconds (5 minutes = 300 seconds)
SCRIPT_LENGTH=300

# Target number of segments (calculated: SCRIPT_LENGTH / SEGMENT_DURATION)
TARGET_SEGMENTS=38

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Output directory for generated projects
OUTPUT_DIR=projects

# Maximum retry attempts for API calls
MAX_RETRIES=3

# Timeout for API calls (seconds)
API_TIMEOUT=60

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable detailed logging
DETAILED_LOGGING=true

# Save intermediate results
SAVE_INTERMEDIATE=true

# Enable progress tracking
PROGRESS_TRACKING=true

# Parallel processing (experimental)
PARALLEL_PROCESSING=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode (enables additional debugging)
DEV_MODE=false

# Mock API calls (for testing without API usage)
MOCK_API=false

# Verbose output
VERBOSE=false